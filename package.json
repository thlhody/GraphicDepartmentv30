{
  "name": "ct3-dev-server",
  "version": "1.0.0",
  "description": "Development server for CT3 Spring Boot app",
  "scripts": {
    "dev": "browser-sync start --config bs-config.js",
    "dev-simple": "browser-sync start --proxy 'localhost:8447' --files 'src/main/resources/static/**/*,src/main/resources/templates/**/*' --reload-delay 500",
    "dev-full": "browser-sync start --proxy 'localhost:8447' --files 'src/main/resources/static/**/*,src/main/resources/templates/**/*' --reload-delay 500 --open --notify false --ui-port 3001"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3"
  }
}